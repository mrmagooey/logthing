# Kerberos Configuration for WEF Server
# Generated by Ansible for WEF Server Real AD Testing

[libdefaults]
    default_realm = {{ wef_kerberos_realm }}
    dns_lookup_realm = false
    dns_lookup_kdc = true
    ticket_lifetime = 24h
    renew_lifetime = 7d
    forwardable = true
    udp_preference_limit = 1

[realms]
    {{ wef_kerberos_realm }} = {
        kdc = dc01.{{ wef_domain }}:88
        admin_server = dc01.{{ wef_domain }}:749
        default_domain = {{ wef_domain }}
    }

[domain_realm]
    .{{ wef_domain }} = {{ wef_kerberos_realm }}
    {{ wef_domain }} = {{ wef_kerberos_realm }}

[logging]
    default = FILE:/var/log/krb5libs.log
    kdc = FILE:/var/log/krb5kdc.log
    admin_server = FILE:/var/log/kadmind.log
